<mvc:View
	controllerName="com.zahariev.solei.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Home_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Home_contentLabel}"/>
		</landmarkInfo>
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							parts: [{path:'view>/isPhone'}, {path:'i18n>homeImage'}],
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"
						height="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://home"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>homeTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>homeContent}"
							class="sapUiTinyMarginBottom"/>
						<Link
							text="{i18n>accessLink}"
							tooltip="{i18n>accessSocialLink}"/>
						<Link
							text="{i18n>learnLink}"
							tooltip="{i18n>learnSocialMediaTooltip}"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>